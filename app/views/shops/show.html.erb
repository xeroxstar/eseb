<div id="shop_content">
  <h1><%=@shop.name%></h1>
  <div id="left_side">
    <ul>
      <%=render :partial=>'shop_category', :collection=>@shop.shop_categories, :locals=>{:shop=>@shop}%>
    </ul>
  </div>
  <div id="shop_right">
    <div id="products">
      <%=render :partial=>'product', :collection=>@products%>
    </div>
  </div>
  <div class="clear"></div>
</div>