<%form_for user do |f|%>
  <%=error_messages_for :user%>
  <p>Username: <%=user.login%></p>
  <p>Email: <%=user.email%></p>
  <p>First name: <%=f.text_field :first_name%></p>
  <p>Last name: <%=f.text_field :last_name%></p>
  <p>SocialId: <%=f.text_field :social_id%></p>
  <%f.fields_for address do |address|%>
    <p>Address: <%=address.text_field :street%></p>
    <p>City: <%=address.select :city_id,City.all.collect{|c| [c.name,c.id]},{:include_blank=>'Select a city' }%></p>
    <p>Country: <%=address.select :country_id,Country.all.collect{|c| [c.name,c.id]},{:include_blank=>'Select a country' }%></p>
  <%end%>
  <p><%=f.submit%></p>
<%end%>